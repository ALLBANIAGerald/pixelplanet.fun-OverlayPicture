{
    "compilerOptions": {
        "strict": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "lib": ["es6", "dom"],
        "target": "es5",
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "rootDir": "./src",
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "exclude": ["node_modules", "dist"]
}
